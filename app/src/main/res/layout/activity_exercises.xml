<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_exercises"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.oms_infotech.www.fitnessapp.Exercises">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:elevation="3dp"
        android:id="@+id/rlbreakfast"
        android:background="#F6F6F6"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:padding="10dp"
            android:layout_marginBottom="3dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/imageViewmaths"
                android:src="@drawable/breakfast"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Step Counter"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_marginLeft="15dp"
                android:id="@+id/textView11"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imageViewmaths"
                android:layout_toRightOf="@+id/imageViewmaths" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="10dp"
        android:elevation="3dp"
        android:id="@+id/rllunch"
        android:layout_below="@+id/rlbreakfast"
        android:background="#F6F6F6"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:padding="10dp"
            android:layout_marginBottom="3dp"
            android:elevation="3dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/imageViewreading"
                android:src="@drawable/lunch"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Squats"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_marginLeft="15dp"
                android:id="@+id/textView10"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imageViewreading"
                android:layout_toRightOf="@+id/imageViewreading" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="10dp"
        android:elevation="3dp"
        android:id="@+id/rldinner"
        android:layout_below="@+id/rllunch"
        android:background="#F6F6F6"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            android:padding="10dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/imageViewawa"
                android:src="@drawable/dinner"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Push-Ups"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_marginLeft="15dp"
                android:id="@+id/textView12"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imageViewawa"
                android:layout_toRightOf="@+id/imageViewawa" />
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>
